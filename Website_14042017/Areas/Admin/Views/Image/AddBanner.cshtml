@{
    ViewBag.Title = "Tải hình banner và slider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminTemplate.cshtml";
}

<h2>Tải hình banner và slider</h2>


@using (Html.BeginForm("AddBanner", "Image", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4></h4>
        <span class="text-center text-danger">@ViewBag.Error</span>
        <hr />
        <div class="form-group">
            <span class="control-label col-md-2">Chọn hình</span>
            <div class="col-md-10">
                <input type="file" multiple id="files" name="files" class="control" required />
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">Chọn loại hình</span>
            <div class="col-md-10">
                <select class="control" id="typeImage" name="typeImage">
                    <option value="banner">Banner</option>
                    <option value="slider">Slider</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Upload" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "BannerList", "Image")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
