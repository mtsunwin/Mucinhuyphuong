@model IEnumerable<Website_14042017.Models.Image>

@{
    ViewBag.Title = "Danh sách hình banner và slider";
    Layout = "~/Areas/Admin/Views/Shared/_AdminTemplate.cshtml";
}

<h2>Danh sách hình banner và slider</h2>

<p>
    @Html.ActionLink("Tải hình lên", "AddBanner", "Image")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Link)
        </th>
        <th></th>
        <th></th>
    </tr>

    @{
        if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Link)
                    </td>
                    <td><a href="@item.Link"><img src="@item.Link" style="width:100px; height: 100px;" /></a></td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteBanner", new { name = item.Name }) |
                        @Html.ActionLink("Set is banner", "SetIsBannerOrSlider", new { name = item.Name, type = "banner" }) |
                        @Html.ActionLink("Set is slider", "SetIsBannerOrSlider", new { name = item.Name, type = "slider" })
                    </td>
                </tr>
            }
        }
    }
</table>
