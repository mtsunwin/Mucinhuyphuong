@model Website_14042017.Models.Product

@{
    ViewBag.Title = "Sửa";
    Layout = "~/Areas/Admin/Views/Shared/_AdminTemplate.cshtml";
}

<h2>Sửa</h2>

<form action="/Admin/SanPham/Sua" method="post" enctype="multipart/form-data" novalidate="novalidate">
    <input name="__RequestVerificationToken" type="hidden">
    <div class="form-horizontal">
        <h4>Sản phẩm</h4>
        <hr>

        <input id="Name" name="Name" type="hidden" value="@Model.Name">

        <div class="form-group">
            <label class="control-label col-md-2" for="ProductType">Loại sản phẩm</label>
            <div class="col-md-10">
                <select id="ProductType" name="ProductType">
                    @{
                        if (@ViewBag.PrTypes != null)
                        {
                            foreach (var item in @ViewBag.PrTypes)
                            {
                                if (@item.Name == @Model.ProductType)
                                {
                                    <option value="@item.Name" selected="selected">@item.Name</option>
                                }
                                else
                                {
                                    <option value="@item.Name">@item.Name</option>
                                }
                            }
                        }
                    }
                </select>
                @*<input class="form-control text-box single-line" id="ProductType" name="ProductType" type="text" value="">*@
                <span class="field-validation-valid text-danger" data-valmsg-for="ProductType" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Country">Nước sản xuất</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Country" name="Country" type="text" value="@Model.Country">
                <span class="field-validation-valid text-danger" data-valmsg-for="Country" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Manufacturer">Nơi sản xuất</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Manufacturer" name="Manufacturer" type="text" value="@Model.Manufacturer">
                <span class="field-validation-valid text-danger" data-valmsg-for="Manufacturer" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Price">Giá</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" data-val="true" data-val-number="The field Price must be a number." data-val-required="The Price field is required." id="Price" name="Price" type="text" value="@Model.Price">
                <span class="field-validation-valid text-danger" data-valmsg-for="Price" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Descrip">Mô tả</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="Descrip" name="Descrip" type="text" value="@Model.Descrip">
                <span class="field-validation-valid text-danger" data-valmsg-for="Descrip" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Image">Image</label>
            <div class="col-md-10">
                <img width="100" height="100" src="@Model.Image"/>
                <input id="uploadImg" name="uploadImg" type="file" />
                <input class="form-control text-box single-line" id="Image" name="Image" type="text" value="@Model.Image">
                <span class="field-validation-valid text-danger" data-valmsg-for="Image" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default">
            </div>
        </div>
    </div>
</form>
<div>
    @Html.ActionLink("Back to List", "DanhSachSanPham")
</div>
