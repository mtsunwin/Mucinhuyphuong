@model IEnumerable<Website_14042017.Models.WebsiteInfor>

@{
    ViewBag.Title = "Thông tin footer";
    Layout = "~/Areas/Admin/Views/Shared/_AdminTemplate.cshtml";
}

<h2>Thông tin footer</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hotline)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LinkWeb)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InforOther)
        </th>
        <th></th>
    </tr>

@if (Model != null)
{
    foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hotline)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LinkWeb)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InforOther)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.CompanyName }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.CompanyName })
            </td>
        </tr>
    }
}

</table>
