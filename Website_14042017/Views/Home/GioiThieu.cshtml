@model Website_14042017.ModelViews.NewsView
@{
    ViewBag.Title = "Giới thiệu";
    Layout = "~/Views/Shared/_Template.cshtml";
}
<div class="row" style="padding: 30px 20px">
    <div style="width:100%; height:auto;">
        @{
            if (Model != null)
            {
                <div class="row">
                    <h2 class="col-lg-12 text-center"><strong>@Model.Title</strong></h2>
                </div>
                <div class="row">
                    <h3 class="col-lg-12 text-center">@Model.Descrip</h3><br />
                </div>
                @Html.Raw(Model.Content)
            }
        }
    </div>
</div>