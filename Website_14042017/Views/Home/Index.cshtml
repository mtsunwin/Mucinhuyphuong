@model Website_14042017.ModelViews.NewsView
@{
    Layout = "~/Views/Shared/_Template.cshtml";
    ViewBag.Title = "Thông tin vật tư in lưới";
}
<!--Slider-->
<div class="row" style="margin:10px 0">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators" id="car">
            @*<li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
            <li data-target="#carousel-example-generic" data-slide-to="2"></li>*@
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox" id="list-slide">
            @*<div class="item active">
                <img src="~/Areas/Admin/Images/Gallary/test.png" alt="Gallary" style="width:100%;">
                <div class="carousel-caption">
                </div>
            </div>
            <div class="item">
                <img src="~/Areas/Admin/Images/Gallary/Untitled-1.png" alt="Gallary" style="width:100%;"/>
                <div class="carousel-caption">
                </div>
            </div>*@
        </div>
        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div class="row" style="padding: 30px 20px">
    <div style="width:100%; height:auto;">
        @{
            if (Model != null)
            {
                @Html.Raw(Model.Content)
            }
        }
    </div>
</div>
<hr />
<div id="viewproex">
    <div class="row" id="lstpr1">
    </div>
    <div class="row" id="lstpr2">
    </div>
</div>
@section ScriptUser{
    <script>
        $.ajax({
            url: '/product/GetTop',
            type: 'GET',
            dataType: 'Json',
            success: function (data) {
                var con = "";
                $(data).each(function (i, val) {
                    if (i <= 2) {
                        con += "<div class='col-sm-6 col-md-4'>"
                            + "<div class='thumbnail'>"
                            + "<img src='" + val.Image + "' alt='...' width='100' height='100'>"
                            + "<div class='caption' style='margin: auto; top: 0; bottom: 0; left: 0; right: 0; text-align: center;'>"
                            + "<h4>" + val.Name + "</h4>"
                            + "<p><a href='/product/productdetails?name=" + val.Name + "' class='btn btn-primary' role='button' style='background:rgba(9, 70, 215, 0.45);text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black'>Xem chi tiết</a></p>"
                            + "</div>"
                            + "</div>"
                            + "</div>";
                    }
                });
                $("#lstpr1").html(con);
                con = "";
                $(data).each(function (i, val) {
                    if (i > 2) {
                        con += "<div class='col-sm-6 col-md-4'>"
                            + "<div class='thumbnail'>"
                            + "<img src='" + val.Image + "' alt='...' width='100' height='100'>"
                            + "<div class='caption' style='margin: auto; top: 0; bottom: 0; left: 0; right: 0; text-align: center;'>"
                            + "<h4>" + val.Name + "</h4>"
                            + "<p><a href='/product/productdetails?name=" + val.Name + "' class='btn btn-primary' role='button' style='background:rgba(9, 70, 215, 0.45);text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black'>Xem chi tiết</a></p>"
                            + "</div>"
                            + "</div>"
                            + "</div>";
                    }
                });
                $("#lstpr2").html(con);
            },
            error: function (error) {
            }
        });

        /****** Get slider ******/
        $.ajax({
            url: '/home/GetSlider',
            type: 'GET',
            dataType: 'Json',
            success: function (data) {
                $(data).each(function (i, val) {
                    /***** carousel *******/
                    if(i==0){
                        $('#car').append("<li data-target='#carousel-example-generic' data-slide-to='" + i + "' class='active'></li>");
                        $('#list-slide').append("<div class='item active'><img src='"+val.Path+"' alt='Gallary' style='width:100%;'><div class='carousel-caption'></div></div>");
                    }
                    else {
                        $('#car').append("<li data-target='#carousel-example-generic' data-slide-to='" + i + "'></li>");
                        $('#list-slide').append("<div class='item'><img src='" + val.Path + "' alt='Gallary' style='width:100%;'><div class='carousel-caption'></div></div>");
                    }
                    /*****  *****/
                    
                });
            }
        });
    </script>
}