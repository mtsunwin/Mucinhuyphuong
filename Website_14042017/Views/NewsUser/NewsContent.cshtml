@model Website_14042017.Models.News

@{
    ViewBag.Title = "NewsContent";
    Layout = "~/Views/Shared/_Template.cshtml";
}
@section HeaderCSS{
    <link href="~/Content/syleNews.css" rel="stylesheet" />
}
@*Slider*@
<div class="row" style="margin:10px 0">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators" id="car">
        </ol>
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox" id="list-slide">
            
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div style="width:100%; height:auto;" id="newscontent">
    @{
        if (Model != null)
        {
            <div class="row">
                <div class="col-lg-offset-0 col-lg-12">Thời gian đăng: @Model.DatePost bởi @Model.Author</div>
            </div>
            <hr />
            <div>
                <h2><strong>@Model.Title</strong></h2>
                <h3>@Model.Descrip</h3><br />
                @Html.Raw(Model.Content)
            </div>
        }
    }
</div>
@section ScriptUser{
    <script>
        /****** Get slider ******/
        $.ajax({
            url: '/home/GetSlider',
            type: 'GET',
            dataType: 'Json',
            success: function (data) {
                $(data).each(function (i, val) {
                    /***** carousel *******/
                    if (i == 0) {
                        $('#car').append("<li data-target='#carousel-example-generic' data-slide-to='" + i + "' class='active'></li>");
                        $('#list-slide').append("<div class='item active'><img src='" + val.Path + "' alt='Gallary' style='width:100%;'><div class='carousel-caption'></div></div>");
                    }
                    else {
                        $('#car').append("<li data-target='#carousel-example-generic' data-slide-to='" + i + "'></li>");
                        $('#list-slide').append("<div class='item'><img src='" + val.Path + "' alt='Gallary' style='width:100%;'><div class='carousel-caption'></div></div>");
                    }
                    /*****  *****/

                });
            }
        });
    </script>
}