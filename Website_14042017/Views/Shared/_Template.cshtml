@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Style.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
    <title>@ViewBag.Title</title>
    @RenderSection("HeaderCSS", false)
</head>
<body>
    <!--START TOP (name css start by .top-...) -->
    <div class="container">
        <div class="row">
            <div class="top">
                <img src="~/Areas/Admin/Images/z608697457304_d3351fa88d71373b89864ea9a9cbc723.png" style="margin-top: 10px; top: 0; left:0; right:0; bottom:0; padding:0" width="120" id="imgBanner" />
                <div id="hostphonetop" ng-app="myApp" ng-controller="customersCtrl">
                    <span class="glyphicon glyphicon-earphone" style="font-size:20px;"></span> <span style="font-size: 20px; font-family: tahoma;"> Hotline: </span><b>{{myData}}</b>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <nav class="navbar" style="background:#676666;">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="glyphicon glyphicon-align-justify" style="color:#fff;"></span>
                </button>
                <a class="navbar-brand" href="/home/">
                    <span class="glyphicon glyphicon-home" style="color:#fff"></span>
                </a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <div class="top-menu">
                    <ul class="nav navbar-nav" id="menutop"></ul>
                </div>
            </div><!-- /.navbar-collapse -->
        </nav>
    </div>
    <!--END TOP (name css start by .top-...) -->
    <!--START BODY (name css start by .container-body-...)-->
    <div class="container-body">
        <div class="container">
            <div class="col-md-2 container-menu-left" style="padding:0px;">
                <div class="row" style="border:1px solid; margin-bottom:5px;">
                    <ul id="menulefttype"></ul>
                </div>
                <div class="row" style="border:1px solid; margin-bottom:5px;">
                    <span id="sptintuc">
                        <span class="glyphicon glyphicon-triangle-right"></span>  TIN TỨC
                    </span>
                    <ul class="tintuc-menu" id="tintucmoi"></ul>
                </div>
            </div>
            <div class="col-md-10" style="padding: 0px 0px 0px 5px; margin: 0px">
                @RenderBody()
            </div>
        </div>
    </div>
    <!--END BODY (name css start by .container-body-...)-->
    <!--START FOOTER (name css start by .footer-...)-->
    <div class="container" style="margin-top:5px;">
        <div class="footer">
            <div class="row">
                <div class="col-md-4">
                    <img src="~/Areas/Admin/Images/z608697457304_d3351fa88d71373b89864ea9a9cbc723.png" style="margin-top: 10px; top: 0; left:0; right:0; bottom:0; padding:0" width="120px" />
                </div>
                <div class="col-md-4">
                    <div class="footer-thongtin">
                        <div id="thongtin1">
                        </div>
                    </div>
                </div>
                <div class="col-md-4 footer-thongtin">
                    <div id="thongtin2">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--END FOOTER (name css start by .footer-...)-->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script>
        $.ajax({
            url: '/home/GetNew',
            type: 'GET',
            dataType: 'Json',
            success: function (data) {
                var lstNews = "";
                $(data).each(function (i, val) {
                    lstNews += "<li><a href='/newsuser/NewsContent/" + val.Id + "'><span class='glyphicon glyphicon-triangle-right'></span>" + val.Title + "</a></li>";
                });
                $("#tintucmoi").html(lstNews);
            }
        });
        $.ajax({
            url: '/MenuTop/GenerateMenu',
            type: 'GET',
            success: function (data) {
                $("#menutop").html(data);
            }
        });
        $.ajax({
            url: '/MenuTop/MenuLeftType',
            type: 'GET',
            success: function (data) {
                $("#menulefttype").html(data);
            }
        });
        $.ajax({
            url: '/WebInfos/GetInfo',
            type: 'GET',
            success: function (data) {
                var str1 = "";
                var str2 = "";
                $(data).each(function (i, val) {
                    if (i == 0) {
                        str1 += "<p style='color:#fff;'>" + val.CompanyName + "</p>"
                         + "<p>ĐC: " + val.Address + "</p>"
                         + "<p>Tel : " + val.Hotline + "</p>"
                         + "<p>Email : " + val.Email + "</p>"
                         + "<p>Website : <a href='" + val.LinkWeb + "'style='color:#fff;'>" + val.LinkWeb + "</a></p>";
                    }
                    else {
                        str2 += "<p style='color:#fff;'>" + val.CompanyName + "</p>"
                        + "<p>ĐC: " + val.Address + "</p>"
                        + "<p>Tel : " + val.Hotline + "</p>"
                        + "<p>Email : " + val.Email + "</p>"
                        + "<p>Website : <a href='" + val.LinkWeb + "'style='color:#fff;'>" + val.LinkWeb + "</a></p>";
                    }
                });
                $('#thongtin1').html(str1);
                $('#thongtin2').html(str2);
            }
        });
        var app = angular.module('myApp', []);
        app.controller('customersCtrl', function ($scope, $http) {
            $http.get("/WebInfos/GetInfo").then(function (response) {
                $scope.myData = response.data[0].Hotline;
            });
        });

        /***** get panner ******/
        $.ajax({
            url: '/Home/GetBanner',
            type: 'GET',
            success: function (data) {
                $('#imgBanner').attr('src',data.Path);
            }
        });
    </script>

    <script>
        $(function () {
            var counterHub = $.connection.counterHub;
            $.connection.hub.start().done(function () {
                // do something hub connected
            });
            counterHub.client.UpdateCount = function (count) {
                $('#counter').text(count);
            }
            counterHub.client.UpdateDay = function (day) {
                $('#totalUserOfDay').text(day);
            }
            counterHub.client.UpdateWeek = function (week) {
                $('#totalUserOfWeek').text(week);
            }
        });
    </script>

    @RenderSection("ScriptUser", false)
</body>
</html>
