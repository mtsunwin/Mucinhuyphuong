@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Style.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    @RenderSection("HeaderCSS", false)
</head>
<body>
    <!--START TOP (name css start by .top-...) -->
    <div class="container">
        <div class="row">
            <div class="top">
                <img src="~/Areas/Admin/Images/Img-Top/logotext11.png" />
                <div id="hostphonetop"><span class="glyphicon glyphicon-earphone"></span>Hotline: <b>1234567890</b></div>
            </div>
        </div>
    </div>
    <div class="container">
        <nav class="navbar" style="background:#676666;">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="glyphicon glyphicon-align-justify" style="color:#fff;"></span>
                </button>
                <a class="navbar-brand" href="/home/">
                    <span class="glyphicon glyphicon-home" style="color:#fff"></span>

                </a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <div class="top-menu">
                    <ul class="nav navbar-nav" id="menutop">
                       
                    </ul>
                </div>
            </div><!-- /.navbar-collapse -->
        </nav>
    </div>
    <!--END TOP (name css start by .top-...) -->
    <!--START BODY (name css start by .container-body-...)-->
    <div class="container-body">
        <div class="container">
            <div class="col-md-2 container-menu-left" style="padding:0px;">
                <div class="row" style="border:1px solid; margin-bottom:5px;">
                    <ul id="menulefttype">
                    </ul>
                </div>
                <div class="row" style="border:1px solid; margin-bottom:5px;">
                    <span id="sptintuc"><span class="glyphicon glyphicon-triangle-right"></span>  TIN TỨC</span>
                    <ul class="tintuc-menu" id="tintucmoi"></ul>

                </div>
            </div>

            <div class="col-md-10" style="padding: 0px 0px 0px 5px; margin: 0px">
                @RenderBody()
            </div>
        </div>
    </div>
    <!--END BODY (name css start by .container-body-...)-->
    <!--START FOOTER (name css start by .footer-...)-->
    <div class="container" style="margin-top:5px;">
        <div class="footer">
            <div class="row">
                <div class="col-md-4">
                    <div class="footer-thongtin">
                        <div id="thongtin1">
                        </div>
                    </div>
                </div>
                <div class="col-md-8 footer-thongtin">
                    <div id="thongtin2">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--END FOOTER (name css start by .footer-...)-->
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script>
        $.ajax({
            url: '/home/GetNew',
            type: 'GET',
            dataType: 'Json',
            success: function (data) {
                var lstNews = "";
                $(data).each(function (i, val) {
                    lstNews += "<li><a href='/newsuser/NewsContent/" + val.Id + "'><span class='glyphicon glyphicon-triangle-right'></span>" + val.Title + "</a></li>";
                });
                $("#tintucmoi").html(lstNews);
            },
            error: function () {

            }
        });
        $.ajax({
            url: '/MenuTop/GenerateMenu',
            type: 'GET',
            success: function (data) {
                $("#menutop").html(data);
            },
            error: function (error) {
              
            }
        });
        $.ajax({
            url: '/MenuTop/MenuLeftType',
            type: 'GET',
            success: function (data) {
                $("#menulefttype").html(data);
            },
            error: function (error) {
                
            }
        });
        $.ajax({
            url: '/WebInfos/GetInfo',
            type: 'GET',
            success: function (data) {
                var str1 = "";
                var str2 = "";
                $(data).each(function (i, val) {
                    if (i == 0) {
                        str1 += "<p style='color:#fff;'>" + val.CompanyName + "</p>"
                         + "<p>ĐC: " + val.Address + "</p>"
                         + "<p>Tel : " + val.Hotline + "</p>"
                         + "<p>Email : " + val.Email + "</p>"
                         + "<p>Website :<a href='" + val.LinkWeb + "'>" + val.LinkWeb + "</a></p>";
                    }
                    else {
                        str2 += "<p style='color:#fff;'>" + val.CompanyName + "</p>"
                        + "<p>ĐC: " + val.Address + "</p>"
                        + "<p>Tel : " + val.Hotline + "</p>"
                        + "<p>Email : " + val.Email + "</p>"
                        + "<p>Website :<a href='" + val.LinkWeb + "'>" + val.LinkWeb + "</a></p>";
                    }
                });
                $('#thongtin1').html(str1);
                $('#thongtin2').html(str2);
            }
        });
    </script>
    @RenderSection("ScriptUser", false)
</body>
</html>
